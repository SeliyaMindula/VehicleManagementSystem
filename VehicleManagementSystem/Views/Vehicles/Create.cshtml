@model VehicleManagementSystem.Models.Vehicle

@{
    ViewData["Title"] = "Create Vehicle";
}

<div class="container mt-3">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Add Vehicle</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-2">
                            <label asp-for="RegNo" class="control-label">Vehicle Registration Number</label>
                            <input asp-for="RegNo" class="form-control" />
                            <span asp-validation-for="RegNo" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-2">
                            <label asp-for="Model" class="control-label">Vehicle Model</label>
                            <input asp-for="Model" class="form-control" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-2">
                            <label asp-for="NumberOfSeats" class="control-label">Number Of Vehicle Seats</label>
                            <input asp-for="NumberOfSeats" class="form-control" />
                            <span asp-validation-for="NumberOfSeats" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-2">
                            <label asp-for="Colors" class="control-label">Vehicle Color</label>
                            <input asp-for="Colors" class="form-control" />
                            <span asp-validation-for="Colors" class="text-danger"></span>
                        </div>

                        <div class="form-group text-center">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="mt-2">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
